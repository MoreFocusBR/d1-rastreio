generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUsers {
  id               String @id @default(cuid())
  email            String
  password         String
  token            String @default(cuid())
}

model Venda {
   Id String @id @default(cuid())
   Codigo Int @unique
   ClienteCodigo  Int
   ClienteTipoPessoa  String?
   ClienteDocumento String
   TransportadoraCodigo Int?
   DataVenda String?
   Entrega Boolean
   EntregaNome String?
   EntregaEmail String?
   NumeroObjeto String?
   EntregaTelefone String?
   EntregaLogradouro String?
   EntregaLogradouroNumero String?
   EntregaLogradouroComplemento String?
   EntregaBairro String?
   EntregaMunicipioNome String?
   EntregaUnidadeFederativa String?
   EntregaCEP String?
   Observacoes String?
   ObservacoesLoja String?
   CodigoStatus Int?
   DescricaoStatus String?
   DataHoraStatus String?
   PrevisaoEntrega String?
   CodigoNotaFiscal Int?
   DataEntrega String?
   Cancelada Boolean
   DataEnvio String?
   NotaFiscalNumero Int?
   DataColeta String?
   Nfe Nfe[]
   ItensVenda ItensVenda[]
}

model ItensVenda {
  Id String @id @default(cuid())
  Codigo               Int
  ProdutoReferencia    String?
  ProdutoBarras        String?
  ProdutoBundleCodigo  Int?
  VendaCodigo          Int?
  ProdutoCodigo        Int?
  PrecoUnitarioVenda   String?
  PrecoUnitarioCusto   String?
  EmbaladoParaPresente Boolean?
  ValorEmbalagemPresente String?
  Quantidade           String?
  AtributosEspeciais   String?
  ItemNome             String?
  ItemDescontoPercentual String?
  ItemDescontoValor    String?
  ItemValorBruto       String?
  ItemValorLiquido     String?
  Servico              Boolean?
  Venda Venda @relation(fields: [CodigoVendaRel], references: [Codigo]) 
  CodigoVendaRel Int
}

model Nfe {
    Id String @id @default(cuid())
    Codigo Int
    CodigoVenda Int
    CodigoCliente Int?
    DataEmissao String?
    HoraEmissao String?
    HoraSaida String?
    Nfe Boolean?
    Nfce Boolean?
    NotaFiscalNumero Int
    TransportadoraCodigo Int?
    TransportadoraNome String?
    MeioTransporte String?
    NumeroObjeto String?
    NotaFiscalEletronica String
    Cancelada Boolean
    MotivoCancelamento String?
    Venda Venda @relation(fields: [CodigoVendaRel], references: [Codigo]) 
    CodigoVendaRel Int    
}

model VendaFilaIntegracao {
  Id String @id @default(cuid())
  Codigo Int
  ClienteDocumento String
  Payload String @db.Text
}

model RastreioChat {
    Id            String @id @default(cuid())
    Titulo        String
    Etapa         Int
    Prioridade    Int
    Mensagem      String
    Ativo         Boolean
}

model contextoRastreio {
    Id                String @id @default(cuid())
    Telefone          String
    MensagemCliente   String?
    Etapa             Int
    Data              String
}

model RastreioChatMetricas {
    Id                    String @id @default(cuid())
    CodigoVenda           String
    DataVenda             String?
    NotaFiscalEletronica  String?
    TransportadoraNome    String?
    MomentoConsulta       DateTime @default(now())
    Ocorrencias           String?
    Canal                 String?       
}